<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="108dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/loginTitle"
                        android:textColor="#191B1C"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Login to your account"/>

                    <TextView
                        android:id="@+id/loginSubtitle"
                        android:textColor="#656E72"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Enter your email and password to enter your account"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/formLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/emailInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/emailLabel"
                            android:textColor="#191B1C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Email address"/>

                        <EditText
                            android:id="@+id/emailEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr24bf0f0f0"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:paddingHorizontal="20dp"
                            android:hint="Enter email address"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/passwordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/passwordLabel"
                            android:textColor="#191B1C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Password"/>

                        <LinearLayout
                            android:id="@+id/passwordFieldLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@drawable/cr24bf0f0f0"
                            android:paddingVertical="12dp"
                            android:paddingHorizontal="20dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/passwordEditText"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="Enter password"
                                android:inputType="textPassword"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/passwordToggleIcon"
                                app:shapeAppearanceOverlay="@style/cr24"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/forgotPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/forgotPasswordText"
                            android:textColor="#2466FD"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Forgot Password?"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loginButtonLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/cr8b2466fd"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/loginButtonText"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Login"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/signUpPrompt"
                    android:textColor="#656E72"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Donâ€™t have an account? Sign up"/>
            </LinearLayout>

            <TextView
                android:id="@+id/termsText"
                android:textColor="#656E72"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="By signing in you agree to Terms and Conditions And Privacy Policies"/>

            <LinearLayout
                android:id="@+id/footerDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/footerImage"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
