<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0F1111"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_scrollView_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0F1111"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <!-- Movie Header Section -->
            <LinearLayout
                android:id="@+id/header_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BF0F1111"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <!-- Back Arrow -->
                <ImageView
                    android:id="@+id/header_imageView_backArrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="#FFFFFF"
                    android:scaleType="fitXY" />

                <!-- Rating and Duration -->
                <LinearLayout
                    android:id="@+id/header_layout_ratingDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/header_layout_ratingContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="4dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/header_textView_rating"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="PG-13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/header_textView_duration"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2h 44m" />
                </LinearLayout>

                <!-- Movie Title -->
                <TextView
                    android:id="@+id/header_textView_movieTitle"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Mission: Impossible - Dead Reckoning Part One" />

                <!-- Synopsis and Poster -->
                <RelativeLayout
                    android:id="@+id/header_layout_synopsisContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/header_imageView_moviePoster"
                        android:layout_width="136dp"
                        android:layout_height="188dp"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/header_textView_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/header_imageView_moviePoster"
                        android:layout_marginStart="16dp"
                        android:textColor="#B9BFC1"
                        android:textSize="14sp"
                        android:text="The next-generation Russian submarine Sevastopol employs an advanced AI, activated by a two-piece cruciform key. The AI deceives the crew into attacking a falsely hostile target, only to fire its own torpedo back on itself, sinking the ship and killing all aboard.\n\nIMF agent Ethan Hunt travels to the Empty Quarter of the Arabian Desert to retrieve one-half of the key from disavowed MI6 agent Ilsa Faust, who carries a bounty from an unknown source. Ethan retrieves the half-key and fakes Ilsa's death. Back in Washington D.C., Ethan infiltrates a U.S. Intelligence Community briefing for Director of National Intelligence Denlinger to discuss the rogue AI. Director Eugene Kittridge recounts how the 'Entity' has achieved sentience and can manipulate major defense, intelligence, and financial networks of the world at will. World powers compete to obtain the key to control the Entity, although the exact means of controlling it are unknown.\n\nRevealing himself and exposing Kittridge's bounty on Ilsa, Ethan states his intention to destroy the Entity. Ethan and his IMF teammates Benji Dunn and Luther Stickell travel to Abu Dhabi International Airport to intercept the holder of the other half-key despite knowing they will be racing against all world powers, including the US. Ethan evades US agents in pursuit of the holder, but the half-key is unexpectedly stolen by Grace, a professional thief. Concurrently, Luther and Benji disarm a hoax nuclear device. Ethan suspects foul play after seeing Gabriel, a sadistic Entity liaison with ties to Ethan's pre-IMF past. Aborting the mission, the team scatters while Grace escapes to Rome. Grace is appreciated upon arrival, where she is rescued by Ethan from local authorities, US Agents and an operative entity named Paris.\n\nGrace again escapes, but Ethan rendezvous with Luther and Benji, and Ilsa rejoins them. With Benji and Luther providing support, Ethan and Ilsa follow Grace to Venice where they infiltrate a party held by the arms dealer Alanna Mitsopolis. With the party masquerading as a brokerage set up by the Entity, all groups disclose their role in acquiring the complete key. Grace had been hired by Alanna to steal one half to combine with the other she possessed, which would be sold to her buyer the next day on the Orient Express. Through the Entity, Gabriel proclaims that he will possess the key to the following day regardless of any outcome, and that it has also determined whether Ilsa or Grace will die." />
                </RelativeLayout>
            </LinearLayout>

            <!-- Cast Section -->
            <TextView
                android:id="@+id/cast_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Casts"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cast_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cast_textView_actor1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Tom Cruise"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cast_textView_actor2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hayley Atwell"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cast_textView_actor3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Simon Pegg"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cast_textView_actor4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ving Rhames"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ratings Section -->
            <TextView
                android:id="@+id/ratings_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:text="Ratings"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ratings_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/ratings_layout_scoreContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ratings_textView_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.8"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ratings_textView_scoreOutOf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out of 10"
                        android:textColor="#656E72"
                        android:textSize="14sp" />

                    <!-- Star Rating Bar (Simplified as ImageView for now) -->
                    <ImageView
                        android:id="@+id/ratings_imageView_starBar"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFD700"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ratings_layout_detailsContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Placeholder for additional rating details -->
                    <TextView
                        android:id="@+id/ratings_textView_totalRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="32.812 Ratings"
                        android:textColor="#656E72"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Duration and Rated Section -->
            <LinearLayout
                android:id="@+id/durationRated_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/duration_layout_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/duration_textView_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:textColor="#B9BFC1"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/duration_textView_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="2h 44m"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rated_layout_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rated_textView_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rated"
                        android:textColor="#B9BFC1"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/rated_textView_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="PG-13"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Language Section -->
            <LinearLayout
                android:id="@+id/language_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/language_textView_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Language"
                    android:textColor="#B9BFC1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/language_textView_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Cinema Section -->
            <LinearLayout
                android:id="@+id/cinema_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cinema_textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="PONDOK INDAH CINEMA"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/cinema_layout_locationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cinema_textView_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="11dp"
                        android:text="3.2 KM"
                        android:textColor="#656E72"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/cinema_imageView_locationIcon"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="8dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#656E72"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/cinema_textView_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pondok Indah Mall lt.5 Jakarta"
                        android:textColor="#656E72"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Writers Section -->
            <LinearLayout
                android:id="@+id/writers_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/writers_textView_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Writers"
                    android:textColor="#B9BFC1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/writers_textView_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Bruce Geller, Christopher McQuarrie, Erik Jendresen"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Production Section -->
            <LinearLayout
                android:id="@+id/production_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/production_textView_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Production"
                    android:textColor="#B9BFC1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/production_textView_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Skydance TC Productions C2 Motion Picture Group"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>