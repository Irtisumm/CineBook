<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/privacy_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:contentDescription="Back" />
                <TextView
                    android:id="@+id/title_text"
                    android:textColor="#191B1C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Privacy Policy" />
            </LinearLayout>
            <TextView
                android:id="@+id/privacy_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:textColor="#191B1C"
                android:textSize="16sp"
                android:text="Cinebook Privacy Policy\n\n1. Data Collection\nWe collect personal information such as name, email, and payment details to provide our services.\n\n2. Data Usage\nYour data is used to process bookings and improve our app.\n\n3. Data Sharing\nWe do not share your personal data with third parties except as required for services (e.g., payment processors).\n\n4. Security\nWe implement measures to protect your data, but no system is completely secure.\n\nContact us at privacy@cinebook.com for questions.\n\nLast updated: April 2025"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>