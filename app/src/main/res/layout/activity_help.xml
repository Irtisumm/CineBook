<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/help_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:contentDescription="Back" />
                <TextView
                    android:id="@+id/title_text"
                    android:textColor="#191B1C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Help Center" />
            </LinearLayout>
            <TextView
                android:id="@+id/help_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:textColor="#191B1C"
                android:textSize="16sp"
                android:text="Welcome to the Cinebook Help Center!\n\nHow do I book a ticket?\n- Browse movies on the home screen, select a showtime, and follow the booking steps.\n\nCan I cancel my booking?\n- Yes, go to 'My Bookings' and select 'Cancel' within the allowed time frame.\n\nHow do I update my profile?\n- Visit the Profile section to edit your name, photo, or payment methods.\n\nFor further assistance, contact support at support@cinebook.com."
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>