<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Theater Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_theater_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:textColor="#191B1C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_theater_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:contentDescription="Expand theater" />
    </LinearLayout>

    <!-- Theater Info -->
    <LinearLayout
        android:id="@+id/layout_theater_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_theater_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="#656E72"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icon_theater_separator"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_theater_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#656E72"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Showtimes Container -->
    <LinearLayout
        android:id="@+id/layout_theater_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:visibility="visible">

        <!-- Showtimes and prices will be added programmatically here -->

    </LinearLayout>

</LinearLayout>