<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_resetPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_logoSmall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/linearLayout_emailSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="340dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout_emailHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_emailPrompt"
                        android:textColor="#191B1C"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Whatâ€™s your email address" />

                    <TextView
                        android:id="@+id/textView_emailInstruction"
                        android:textColor="#656E72"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="We will send an account change link to your email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_emailInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout_emailInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cr24bf0f0f0"
                        android:paddingTop="12dp"
                        android:paddingBottom="13dp"
                        android:paddingHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <!-- Changed TextView to EditText -->
                        <EditText
                            android:id="@+id/editText_emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter email address"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout_continueButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@drawable/cr8b2466fd"
                        android:paddingVertical="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_continueButton"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Continue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_termsAndConditions"
                android:textColor="#656E72"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="By signing up or signing up you agree to Terms and Conditions &amp; Privacy Policies" />

            <LinearLayout
                android:id="@+id/linearLayout_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_dividerLine"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>