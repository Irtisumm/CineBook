<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/security_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:contentDescription="Back" />
                <TextView
                    android:id="@+id/title_text"
                    android:textColor="#191B1C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Security" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/password_option_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:paddingVertical="20dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="562dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/password_option_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/key_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/key"
                        android:scaleType="fitXY"
                        android:contentDescription="Key Icon" />
                    <TextView
                        android:id="@+id/update_password_text"
                        android:textColor="#191B1C"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="159dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Update password" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/update_password_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="fitXY"
                    android:contentDescription="Update Password Arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>