<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/notification_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_marginTop="44dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:contentDescription="Back" />
                <TextView
                    android:id="@+id/title_text"
                    android:textColor="#191B1C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Notifications" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/notification_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="298dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/order_confirmation_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/order_confirmation_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/order_confirmation_title"
                            android:textColor="#191B1C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Order confirmation" />
                        <TextView
                            android:id="@+id/order_confirmation_description"
                            android:textColor="#656E72"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Confirmation after successful ticket order with order details." />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/order_confirmation_toggle"
                        android:layout_width="46dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_toggle_on"
                        android:scaleType="fitXY"
                        android:contentDescription="Order Confirmation Toggle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/schedule_reminder_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/schedule_reminder_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/schedule_reminder_title"
                            android:textColor="#191B1C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Schedule reminder" />
                        <TextView
                            android:id="@+id/schedule_reminder_description"
                            android:textColor="#656E72"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Reminders for booked movie schedule sent hours before." />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/schedule_reminder_toggle"
                        android:layout_width="46dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_toggle_on"
                        android:scaleType="fitXY"
                        android:contentDescription="Schedule Reminder Toggle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/promotions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/promotions_details_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/promotions_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/promotions_title"
                                android:textColor="#191B1C"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Promotions and offers" />
                            <TextView
                                android:id="@+id/promotions_description"
                                android:textColor="#656E72"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="Activate to receive exclusive offers and special discounts" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/promotions_toggle"
                            android:layout_width="46dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_toggle_on"
                            android:scaleType="fitXY"
                            android:contentDescription="Promotions Toggle" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@drawable/divider"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>