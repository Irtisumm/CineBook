<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/terms_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_back"
                    android:scaleType="fitXY"
                    android:contentDescription="Back" />
                <TextView
                    android:id="@+id/title_text"
                    android:textColor="#191B1C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Terms and Conditions" />
            </LinearLayout>
            <TextView
                android:id="@+id/terms_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:textColor="#191B1C"
                android:textSize="16sp"
                android:text="Cinebook Terms and Conditions\n\n1. Acceptance of Terms\nBy using Cinebook, you agree to these terms and conditions.\n\n2. Booking and Payments\nAll bookings are final once payment is confirmed. Refunds are subject to our cancellation policy.\n\n3. User Conduct\nUsers must not misuse the app or engage in fraudulent activities.\n\n4. Liability\nCinebook is not liable for issues arising from third-party services (e.g., theaters).\n\nLast updated: April 2025"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>