<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Search Bar Section -->
            <LinearLayout
                android:id="@+id/layout_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="24dp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/cr24bf0f0f0"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_search"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />

                    <EditText
                        android:inputType="text"
                        android:hint="Search..."
                        android:background="@null"
                        android:id="@+id/edit_text_search"
                        android:textColor="#B9BFC1"
                        android:textSize="16sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_cancel"
                    android:textColor="#2466FD"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Cancel" />
            </LinearLayout>

            <!-- Recent Searches Section -->
            <LinearLayout
                android:id="@+id/layout_recent_searches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_recent_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_recent_title"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="7dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Recent Search" />

                    <ImageView
                        android:id="@+id/icon_recent_more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_recent_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_recent_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_recent_item_1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/icon_recent_item_1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/text_recent_item_1"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Transformers" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/icon_clear_recent_item_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_recent_item_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_recent_item_2_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingRight="1dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/icon_recent_item_2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/text_recent_item_2"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Tom Cruise" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/icon_clear_recent_item_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/divider_recent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="32dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />

            <!-- Trending Searches Section -->
            <LinearLayout
                android:id="@+id/layout_trending_searches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="306dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_trending_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_trending_title"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="6dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Trending Searches" />

                    <ImageView
                        android:id="@+id/icon_trending_more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_trending_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_trending_row_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_trending_item_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_1"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="A Haunting in Venice" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_trending_item_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_2"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Expend4bles" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_trending_item_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_3"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Saw X" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_trending_row_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_trending_item_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_4"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Saw X" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_trending_item_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_5"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Taylor Swift" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_trending_item_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/scbcfd1sw1cr4"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_trending_item_6"
                                android:textColor="#191B1C"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="The Creator" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_trending_item_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/scbcfd1sw1cr4"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_trending_item_7"
                            android:textColor="#191B1C"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="The Nun II" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/divider_trending"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginBottom="32dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>